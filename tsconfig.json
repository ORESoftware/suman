{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": ".",
    "paths": {
    },
    "types": [
      "node",
      "async",
      "lodash"
    ],
    "allowJs": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "es5",
      "es2015.promise"
    ]
  },
  "allowJs": true,
  "compileOnSave": false,
  "include": [
    "dts",
    "./**/*.ts"
  ],
  "exclude": [
    "test",
    "node_modules"
  ]
}
